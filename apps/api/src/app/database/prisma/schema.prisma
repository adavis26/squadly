generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  username  String        @unique
  email     String        @unique
  firstName String
  lastName  String
  password  String
  Chats     ChatMembers[]
  Messages  Messages[]
}

model Messages {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Chat {
  id      Int           @id @default(autoincrement())
  name    String
  members ChatMembers[]
}

model ChatMembers {
  chatId Int
  userId Int
  chat   Chat @relation(fields: [chatId], references: [id])
  user   User @relation(fields: [userId], references: [id])

  @@id([chatId, userId])
}
